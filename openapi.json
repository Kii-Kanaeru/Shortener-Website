{
  "openapi": "3.0.0",
  "info": {
    "title": "Shortlink API",
    "version": "1.0.0",
    "description": "API Documentation for Shortlink Service"
  },
  "paths": {
    "/shortlink": {
      "get": {
        "summary": "Fetch short link based on URL",
        "parameters": [
          {
            "in": "query",
            "name": "url",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "URL to be shortened"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched short link",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "author": {
                      "type": "string",
                      "example": "Miftah GanzZ"
                    },
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "originalUrl": {
                          "type": "string",
                          "example": "https://original-link.com"
                        },
                        "shortUrl": {
                          "type": "string",
                          "example": "https://short-link.com/random_chracker"
                        },
                        "createdDate": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2023-11-16T08:41:54.163Z"
                        }
                      }
                    }
                  },
                  "required": ["author", "status", "code", "data"]
                }
              }
            }
          }
        }
      }
    }
  }
}